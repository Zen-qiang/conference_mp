page {
  background: #fff;
}
.form-section {
  padding: 30rpx;
  box-sizing: border-box;
}
.textarea-box {
  margin-bottom: 10px;
}
.textarea-box textarea {
  min-height: 80px;
  font-size: 14px;
  line-height: 16px;
  width: 100%;
}
.textarea-placeholder {
  font-size: 14px;
  line-height: 16px;
}

.img-box {
  color: #666;
  font-size: 12px;
  margin-bottom: 20px;
}
.img-ul {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin: 0 -15rpx;
}
.img-ul .img-li {
  flex: 0 0 25%;
  padding: 15rpx;
  box-sizing: border-box;
}
.img-li .img-li-content {
  height: 0;
  padding-bottom: 100%;
  position: relative;
}
.img-li .img-li-content .img-li-content-image {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  border-radius: 4px;
  overflow: hidden;
}
.img-li .img-li-content .img-li-content-image .delete-icon {
  position: absolute;
  top: 2px;
  right: 2px;
}
.img-li .img-li-content .img-li-content-image image {
  width: 100%;
  height: 100%;
}
.img-li .choose-img {
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  border: 1px dashed #666;
  border-radius: 4px;
  box-sizing: border-box;
}
.choose-img .choose-icon {
  display: inline-block;
}

.btn-box {
  padding: 20rpx;
}
.btn-box .btn {
  border-radius: 999px;
  background: #3695e3;
  color: #fff;
  font-weight: normal;
}