page {
  /* padding-bottom: calc(60px + constant(safe-area-inset-bottom));
  padding-bottom: calc(60px + env(safe-area-inset-bottom)); */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.detail-box {
}
.detail-box swiper {
  height: 100vw;
}
.detail-box .swiper-item {
  height: 100%;
}
.detail-box .swiper-item image {
  width: 100%;
  height: 100%;
}

.detail-info {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}
.detail-info .detail_name {
  font-weight: bold;
  font-size: 44rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.detail-info .detail_desc {
  font-size: 28rpx;
  color: #666;
}
.detail-info .detail_price {
  font-size: 56rpx;
  color: #ec132d;
  font-weight: 400;
}
.detail-info .currency, .small {
  font-size: 40rpx;
}
.detail-info .detail_price .price {
  display: inline-block;
  margin-left: 20rpx;
  color: #666;
  font-size: 24rpx;
  text-decoration: line-through;
}

.detail_evaluate {
  margin-bottom: 10rpx;
  padding: 20rpx 0;
  background: #fff;
}
.detail_evaluate .detail_title {
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: 700;
}
.detail_evaluate .seeMore {
  text-align: center;
  padding: 10rpx 0;
}
.detail_evaluate .noMore {
  color: #666;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}
.detail_evaluate .seeMore button {
  font-weight: normal;
}

.detail-norms {
  background: #fff;
  padding-bottom: 60px;
}
.detail-norms .norms {
  padding: 20rpx 30rpx;
}
.detail-norms .norms_item {
  padding: 20rpx 30rpx;
  color: #666;
  font-size: 24rpx;
  display: flex;
  flex-flow: row nowrap;
}
.detail-norms .norms_item .label {
  flex: 0 0 20%;
}
.detail-norms .norms_item .value {
  flex: 1;
}
.detail-norms .details image {
  width: 100%;
  height: 100%;
}

.goods-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 3;
  width: 100%;
  background: #fff;
  padding-bottom: constant(safe-area-inset-bottom); /* 兼容 iOS < 11.2 */
  padding-bottom: env(safe-area-inset-bottom); /* 兼容 iOS >= 11.2 */
}
.goods-action .content {
  height: 60px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.goods-action .content .ic {
  display: inline-flex;
}
.goods-action .content .lt {
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: right;
}
.goods-action .content .lt > view {
  display: inline-block;
}
.goods-action .content .rt {
  flex: none;
}
.goods-action .content .rt .btn-login {
  padding: 0 80rpx;
}

.goods-action .content .price {
  font-size: 38rpx;
  color: #ec132d;
  font-weight: 400;
}
.goods-action .content .price .currency {
  font-size: 28rpx;
}
.goods-action .content .price .small {
  font-size: 28rpx;
}