page {
  padding-bottom: calc(80px + constant(safe-area-inset-bottom));
  padding-bottom: calc(80px + env(safe-area-inset-bottom));
}
[class$='-box'] {
  margin: 20rpx 0;
  background: #fff;
  padding: 20rpx;
}

.status {
  text-align: center;
  font-size: 38rpx;
  font-weight: 400;
  color: #3695e3;
  padding: 60rpx;
  margin-bottom: -20rpx;
  background: #fff;
}

.row {
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  font-size: 24rpx;
  line-height: 48rpx;
}
.row .lt {
  flex: 0 0 60px;
  color: #666;
  
}
.row .rt {
  flex: auto;
  padding-left: 20rpx;
}
.rt.right {
  text-align: right;
}

.product .valueClass {
  color: #333;
  flex: none;
}
.product .container {
  max-height: 195px;
  overflow: hidden;
}
.product .container.more {
  max-height: 100%;
}
.product .img {
  width: 45px;
  line-height: 0;
  margin-right: 10rpx;
}
.product .moreAction {
  display: flex;
  justify-content: center;
  background: #fff;
  font-size: 24rpx;
  padding: 20rpx 0;
  color: #666;
}

.footer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  background: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.footer {
  padding: 15px 30rpx;
  /* padding-bottom: calc(15px + constant(safe-area-inset-bottom));
  padding-bottom: calc(15px + env(safe-area-inset-bottom)); */
  text-align: right;
  background: #fff;
}
.footer .cancelBtn {
  color: #999;
  font-weight: normal;
}
.footer .payBtn {
  margin-left: 30rpx;
  font-weight: normal;
}