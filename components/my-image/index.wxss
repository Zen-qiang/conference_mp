.my-image {
  width: 100%;
  height: 100%;
  display: inline-block;
}
.my-image.round {
  overflow: hidden;
  border-radius: 100%;
}
.my-image .img {
  height: 100%;
}
.img.square {
  height: 0;
  padding-bottom: 100%;
  position: relative;
  overflow: hidden;
}
.img.square .my-image_img {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
}
.my-image_img {
  width: 100%;
  height: 100%;
}
.my-image_loading, .my-image_error {
  height: 100%;
  /* padding-bottom: 100%; */
  text-align: center;
  position: relative;
  overflow: hidden;
}
.content {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7f8fa;
  color: #999;
}
.content .align {
  display: flex;
  align-items: center;
}