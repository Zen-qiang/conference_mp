.com-member {
  display: flex;
  flex-flow: row nowrap;
}
.com-member .left {
  flex: 0 0 70rpx;
}
.left .delete {
  line-height: 40rpx;
  padding: 20rpx 0;
  color: #f44;
}
.com-member .right {
  flex: auto;
}
/* 右侧内容 */
.right .title {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx 0;
  line-height: 40rpx;
}
.title .panel {
  font-size: 24rpx;
}
.title .panel view {
  display: inline-block;
  vertical-align: middle;
}
.title .panel view + view {
  margin-left: 15rpx;
}
.title .panel .photo {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}
.title .panel .icon {
  width: 26rpx;
  height: 26rpx;
  border: 1px solid #999;
  color: #999;
  font-size: 20rpx;
  line-height: 26rpx;
  border-radius: 8rpx;
  text-align: center;
}
.title .panel .photo image {
  width: 100%;
  height: 100%;
}
.title .edit {
  color: #999;
}
.right .infoList {
  font-size: 22rpx;
  color: #999;
  padding: 14rpx 0;
}
.infoList view {
  line-height: 38rpx;
}
