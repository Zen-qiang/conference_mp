.pdt-item {
  border-radius: 8rpx;
  box-shadow: 0 0 2px rgba(0, 0, 0, .2);
  padding: 8rpx;
  overflow: hidden;
}
.img-box {
  height: 0;
  padding-bottom: 100%;
  position: relative;
}
.img-box .img-content {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.name-box {
  height: 90rpx;
  padding: 0 12rpx;
  line-height: 0;
  margin-top: 10rpx;
}
.name-box .name {
  line-height: 34rpx;
  font-weight: 400;
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  margin-right: 10rpx;
}
.name-box .specs {
  font-size: 24rpx;
  line-height: 28rpx;
  display: inline-block;
  vertical-align: middle;
}
.name-box .title {
  line-height: 28rpx;
  font-weight: 300;
  font-size: 24rpx;
  display: block
}
.amt-box {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding: 0 12rpx;
}
.amt-box .price-container {
  line-height: 0;
}
.price-container .currency, .small {
  font-size: 24rpx;
}
.price-container .rulingPrice {
  display: inline-block;
  font-size: 38rpx;
  color: #ec132d;
  font-weight: 400;
  margin-right: 10rpx;
  line-height: 42rpx;
}
.price-container .rulingPrice > text {
  display: inline-block;
}
.price-container .price {
  display: inline-block;
  font-size: 24rpx;
  color: #666;
}
.price-container .price .line-through {
  display: inline-block;
  text-decoration: line-through;
}

.amt-box .buyed {
  font-size: 24rpx;
  color: #666;
  line-height: 0;
}

.amt-box .cart {
  line-height: 0;
}

.stepper-box {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-end;
}
.stepper-box .btn {
  height: 24px;
}
.stepper-box .btn > view {
  line-height: 0;
}