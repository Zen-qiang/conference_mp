.stabs-box {
  width:100%;
  height:100%;
  position: relative;
  overflow: hidden;
}
.stabs-bar__wrp {
  height: 34px;
  position: relative;
  background: #fff;
  padding: 0 20rpx;
}
.stabs-bar__scrollview {
  height: 100%;
}
.stabs-bar_content {
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  box-sizing: border-box;
}
.stabs-bar__item {
  flex: none;
  box-sizing: border-box;
  padding: 2px 6px;
  margin-right: 8px;
  line-height: 22px;
  border-radius: 4px;
  background: #f2f2f2;
  color: #666;
  overflow: hidden;
}
.stabs-bar__item.active {
  color: #3695e3;
}
.stabs-bar__item__title{
  font-size: 12px;
}
.stabs-content__wrp{
  position: absolute;
  top: 34px;
  left: 0;
  bottom: 0;
  width: 100%;
  overflow: hidden;
}
.stabs-content__scrollview{
  height: 100%;
}