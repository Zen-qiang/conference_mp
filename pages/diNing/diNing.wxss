/* pages/diNing/diNing.wxss */
.diNing {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  padding: 0 30rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.smBox {
  width: 100%;
  height: 160rpx;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #f2f2f2;
}
.scanning {
  width: 690rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #edfcff;
  border: 1px dashed  #0cb4ce;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.smImg {
  margin: 0 auto;
  font-size: 24rpx;
  vertical-align: middle;
}
.smImg image {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.smText {
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 5rpx;
  vertical-align: middle;
}

/* 非管理员视角 */
.card {
  width: 100%;
  background-color: #fff;
  border-bottom: 3px solid #0cb4ce;
}
.top {
  width: 100%;
  height: 260rpx;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  justify-content: space-between
}
.topLeft {
  width: 280rpx;
  height: 240rpx;
}
.topLeft image {
    width: 280rpx;
  height: 240rpx;
}
.topRight {
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #bcbcbc;
  padding-right: 10rpx;
  box-sizing: border-box;
}
.topRight :nth-child(1) {
  font-size: 30rpx;
  color: #000;
}
.center {
  padding-top: 50rpx;
  box-sizing: border-box;
}
.centerTitle {
  text-align: center;
  color: #0cb4ce;
  margin-bottom: 40rpx;
}
.erImg {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  background-color: red;
  margin-bottom: 40rpx;
}
.erImg image {
  width: 400rpx;
  height: 400rpx;
}