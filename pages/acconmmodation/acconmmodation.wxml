  </view>
  </view>
    <!--  -->
    <view class="cardInfo">
      <view  hidden="{{inx != 1}}">
      <!-- ditu -->
        <view class="mapIcon">
          <view>天上人间酒店</view>
          <view class="mapImg"><image src="../../common/resource/map.png"></image></view>
        </view>
