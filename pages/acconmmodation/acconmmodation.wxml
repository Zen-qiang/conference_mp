        <view class="manName">
          <text>入住人员</text>
        </view>
        <view class="footCar">安排接送车辆</view>
      </view>
    </view>
      <!-- 日期弹窗 -->
  <van-popup show="{{ show }}" position="bottom" overlay="{{ true }}" bind:close="onClose">
    <van-datetime-picker type="date" min-date="{{ minDate }}" bind:confirm='confirm' bind:cancel='cancel' />
  </van-popup>
