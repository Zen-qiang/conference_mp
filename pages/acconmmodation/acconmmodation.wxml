        </view>
        <view class="fieldBox">
          <van-field value="{{ endTime }}" bindtap="showpopup1" bind:change="blurTime" icon="arrow" label="请输入截止时间" placeholder="请输入截止时间" input-align="right" border="{{false}}" title-width="200px"  />
