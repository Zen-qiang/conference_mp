<view class="acconmmodation">
<block wx:if="{{!user}}">
  <view class="top">
    <view wx:for="{{topList}}" bindtap='switchTopTitle' data-index="{{index}}"  wx:for-index="index" wx:for-item="item" wx:key="{{index}}"><text class="{{index == inx ? 'borderActive' : ''}}">{{item.title}}</text></view>
  </view>
