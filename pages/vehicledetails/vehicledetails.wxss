/* pages/vehicledetails/vehicledetails.wxss */
.vehicledetails {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.infoBox {
  width: 100%;
}
/* 轮播图 */
.out-box {
  width: 100%;
}
.swiper-wrapper {
   width: 100%;
}
/* 图片盒子 */
.swiper-slide {
  width: 100%;
  }
.swiper-slide image{ 
  width: 100%;
}
.textInfo {
  width: 100%;
  background-color: #fff;
}
.cell {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1px solid #f2f2f2;
}
.cell view:nth-child(1) {
  margin-right: 20rpx;
}
.imgCell {
  display: flex;
  justify-content: space-between;
}
.headImg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
  background-color: red;
  margin-left: 5rpx;
  position: relative;
}
.headImg image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.imgCell view:nth-child(2) {
  padding-top: 15rpx;
  box-sizing: border-box;
  display: flex;
}
.foot {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #0cb4ce;
  color: #fff;
  font-size: 30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}