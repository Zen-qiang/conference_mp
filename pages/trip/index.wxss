/* pages/trip/index.wxss */
.tripBox {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.one {
  width: 100%;
  margin-top: 15px;
  background-color: #fff;
  font-size: 14px;
}
.one-cell {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
/* 切换开关 */
.switchBtn {
  padding-top: 15rpx;
  box-sizing: border-box;
}
.trafficLeft {
  min-width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  position: relative;
}
.down-arrow {
  width: 70rpx;
  height: 50rpx;
  position: absolute;
  right: -6rpx;
  top: 50%;
  margin-top: -35rpx;
}
.down-arrow image {
  width: 70rpx;
  height: 50rpx;
}
.trafficList {
  min-width: 150rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border: 1px solid blue;
  position: absolute;
  z-index: 9;
}
.textName {
  padding-left: 10rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
}
.trafficList text {
  width: 100%;
  height: 40rpx;
  padding-left: 5rpx;
  box-sizing: border-box;
  line-height: 40rpx;
}
.textActeve {
  color: #fff;
  background-color: blue;
}
/* 底部其他成员 */
.bottom {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 14px;
  margin-top: 15px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.moreImg {
  display: flex;
  font-size: 11px;
  color: #c4c0c0;
}
.moreImg view {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: auto 0;
  margin-right: 10rpx;
}
.moreImg view:nth-child(3) {
  margin-right: 0;
}
.moreImg view image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
/* 完成按钮 */
.foot {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  text-align: center;
  color: #fff;
  background-color: #0cb4ce;
  position: fixed;
  left: 0;
  bottom: 0;
}





