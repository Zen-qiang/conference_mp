/* pages/finishTrip/index.wxss */
.finishTrip {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.head {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
  color: #ccc;
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}
.head-left {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: space-around;
}
.head-right {
  padding: 0 40rpx;
  box-sizing: border-box;
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: space-between;
}
.border-bottom{
  height: 100rpx;
  width: 120rpx;
  text-align: center;
}
.border-bottom-active {
  color: #000;
  border-bottom: 2px solid #0cb4ce;
}
.addIcon {
  width: 50rpx;
  height: 50rpx;
  padding-top:15rpx;
  padding-right: 35rpx;
  box-sizing: border-box;
}
.addIcon image {
width: 50rpx;
}
.change {
  text-align: center;
  color: red;
  font-size: 14px;
}
.changeActive {
  color: #0cb4ce;
}
.one {
  width: 100%;
  padding: 30rpx;
  padding-top: 130rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
  /* margin-bottom: 400rpx; */
  background-color: #f2f2f2;
}
.card1 {
  width: 100%;
  height: 320rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  background-color: #ffff;
  position: relative;
}
.clearIcon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  z-index: 9;
}
.clearIcon image {
  width: 50rpx;
  height: 50rpx;
  margin-left: -10rpx;
  margin-top: -15rpx;
}
/* 卡片上部 */
.card1-top {
  display: flex;
  justify-content: space-between;
  height: 220rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
/* 头像 */
.headImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: auto 0;
}
.headImg  image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
/* 长箭头 */
.longArrow {
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 11px;
}
.centerArrow {
  width: 250rpx;
  height: 1px;
  background-color: green;
}
.centerArrowColor {
  width: 250rpx;
  height: 1px;
  background-color: red;
}
.topTime {
  font-size: 14px;
}
/* 到站信息 */
.comeInfo {
  height: 100%;
  font-size: 11px;
  text-align: right;
  /* background-color: pink; */
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.kong {
  height: 10rpx;
}
.addr {
  font-size: 14px;
}
.factTime {
  font-size: 14px;
}
/* 卡片下部 */
.card1-foot {
  display: flex;
   padding: 0 20rpx;
   line-height: 100rpx;
  box-sizing: border-box;
  justify-content: space-between;
  border-top: 1px solid #ccc;
  font-size: 14px;
}
.moreImg {
  display: flex;
  font-size: 11px;
  color: #c4c0c0;
}
.moreImg view {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: auto 0;
  margin-right: 10rpx;
}
.moreImg view image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
/* 完成按钮 */
.foot {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  text-align: center;
  color: #fff;
  background-color: #0cb4ce;
  position: fixed;
  left: 0;
  bottom: 0;
}