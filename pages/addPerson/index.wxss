/* pages/addPerson/index.wxss */
.addPerson {
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.top {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 14px;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #bbb;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.top text:nth-child(2) {
  color: #0cb4ce;
}
.center {
  width: 100%;
  padding: 0 30rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  justify-content: flex-start;
  flex-wrap:wrap;
}
.imgBox {
  width:25%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.img {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #0cb4ce;
  border-radius: 50%;
  margin: 0 auto;
}
.img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.footBtn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  text-align: center;
  color: #fff;
  background-color: #0cb4ce;
  position: fixed;
  left: 0;
  bottom: 0;
}